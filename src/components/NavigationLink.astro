---
import { Icon } from 'astro-icon/components';

interface Props {
    icon: string;
    href: string;
}

const { icon, href } = Astro.props;
---

<li>
    <a href={href} class="flex flex-row items-center gap-4 font-semibold transition-all text-slate-400 hover:text-slate-300">
        <span class="text-2xl">
            <Icon name={icon} />
        </span>
        <span class="text-xl">
            <slot />
        </span>
    </a>
</li>